programa
{
	
	funcao inicio()
	{
		inteiro numeroFinal

		escreva("Digite um numero para que seja exibido todos os numeros\npares até ele: ")
		leia(numeroFinal)

		para(inteiro contador = 0; contador <= numeroFinal; contador+=2 ){
			escreva(contador + "\n")
		}
	}
}
